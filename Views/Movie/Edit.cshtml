@model Movie;

@{
    ViewData["Title"]="Изминеть кино";
    
}

<div class="row">
    <div class="col-6">
        <form asp-controller="Movie" asp-action="Update" asp-route-id="@Model.Id" method="post">
            <div class="mb-3">
                <label for="Name">Kino nomi:</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name">
            </div>
            <div class="mb-3">
                <label for="Year">Nechinchi yil:</label>
                <input type="number" name="Year" class="form-control" value="@Model.Year">
            </div>
            <div class="mb-3">
                <label for="Country">Davlat: @Model.Country</label>
                <select name="Country" id="Country" class="form-select">
                    @if(Model.Country == "uzb")
                    {
                        <option value="uzb">uzbekistan</option>
                    }
                    else
                    {
                        <option value="uzb">uzbekistan</option>
                    }
                    @if(Model.Country == "rus")
                    {
                        <option value="rus">russia</option>
                    }
                    else
                    {
                        <option value="rus">russia</option>
                    }
                    <option value="uzb">uzbekistan</option>
                    <option value="rus">russia</option>
                    <option value="usa">usa</option>
                    <option value="france">france</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success">добавить</button>
        </form>
    </div>
</div>